@page "/credits"

@implements IDisposable

@inject IEditPageService _editPageService
@inject IHttpClientFactory _httpClientFactory
@inject ISpinnerService _spinnerService
@inject IToastService _toastService

<PageHeaderComponent PageName="Credits" Subtitle="Sites and people that helped me" PageIsEditable="true" />

<div class="page-body page-body-scroll-area">
    <div class="padding-vertical-top padding-vertical-bottom page-body-normal-side-padding">

        @if (_creditCategories != null)
        {
            for (int i = 0; i < _creditCategories.Length; i++)
            {
                <div class="d-block margin-vertical-bottom margin-vertical-top">
                    @((MarkupString)_creditCategories[i].Title)
                    @((MarkupString)_creditCategories[i].SubTitle)
                    @((MarkupString)_creditCategories[i].Description)
                </div>

                leftSide = false;

                @foreach (var item in _creditCategories[i].PLCredits)
                {
                    leftSide = !leftSide;

                    creditCss = $"row {(leftSide ? String.Empty : "justify-content-end")}";
                    
                    <div class="@creditCss">
                        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                            <Animate class="w-100" Animation="Animations.FadeUp" DurationMs="2000"
                                     Easing="Easings.EaseInOutQuart" Once="false" Mirror="true">
                                <CreditComponent Credit="item" />
                            </Animate>
                        </div>
                    </div>
                }
            }
        }

    </div>
</div>

