<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <AlertComponent AlertType="AlertComponent.AlertTypeEnum.Info" Title="Authorizing..." Subtitle="Please stand by" />
                </Authorizing>
                <NotAuthorized>
                    <MTS.PL.Web.Blazor.Client.Pages.Authentication.Unauthorized/>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <AlertComponent AlertType="AlertComponent.AlertTypeEnum.Warning" Title="Nope, nothing here" Subtitle="Nothing was found at this address" />
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
