<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <MTS.PL.Web.Blazor.Client.Pages.Authentication.Authorizing/>
                </Authorizing>
                <NotAuthorized>
                    <MTS.PL.Web.Blazor.Client.Pages.Authentication.Unauthorized/>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <MTS.PL.Web.Blazor.Client.Pages.Error.NotFound />
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
